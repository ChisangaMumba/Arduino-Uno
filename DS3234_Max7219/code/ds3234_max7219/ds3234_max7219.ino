#include "assets/ds3234/ds3234.c"
#include "assets/max7219/max7219.c"
//-----------------------------------------------------------------------------------
void setup()
{
  MAX7219_init(SCAN_ALL_DIGITS);
  DS3234_init();
  //DS3234_setTime(tm);       //Uncomment to set time as needed
}
//-----------------------------------------------------------------------------------
uint8_t str[10];  
uint8_t tm[7]; //Sec,Min,Hour,WDay,MDay,Month,Year
//-----------------------------------------------------------------------------------
void loop() 
{
  DS3234_getTime(tm);
  sprintf(str, "t-%02d.%02d.%02d", tm[2], tm[1], tm[0]);        //Time
  
  MAX7219_displayText(str);
}
