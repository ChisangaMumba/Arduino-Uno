#include "assets/ds1631/ds1631.c"
#include "assets/saa1064/saa1064.c"
//-----------------------------------------------------------------------------------
uint8_t str[6];
//-----------------------------------------------------------------------------------
void setup()
{
  SAA1064_init();
  ds1631_init(24, 20, RES09_BIT); // High, Low, Resolution
}
//-----------------------------------------------------------------------------------
void loop() 
{
  dtostrf(ds1631_getTemp(TEMP_REG), 5, 1, str); // 5 chars min total width, 1 after decimal point  
  SAA1064_displayText(str);

  ds1631_convDelay();
}
