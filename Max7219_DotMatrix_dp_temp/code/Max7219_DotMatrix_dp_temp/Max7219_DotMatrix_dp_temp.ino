signed int tempr;
char numStr[10];
//------------------------------------------------------------------------------
void setup() 
{
  MAX7219_init(4);    //Number of chips
  TC72_init();
}
//------------------------------------------------------------------------------
void loop() 
{  
  tempr = TC72_readTempr();

  dtostrf(calcTempr(tempr), 5, 1, numStr);   // 5 chars min total width, 1 after decimal point  

  MAX7219_displayText(numStr); 
}
