#include "assets/LCD_Serial.c"
//-----------------------------------------------------------------------------------
void setup()
{
  LCD_init();
  LCD_string(0, 3, "jhd 2x16 lcd");
}
//-----------------------------------------------------------------------------------
uint8_t str[10], numStr[10];
void loop() 
{
  float temp = -287.9;

  dtostrf(temp, 7, 1, numStr);   // 7 chars min total width, 1 after decimal point
  sprintf(str, "%s°c", numStr);   //°
  
  //sprintf(str, "%4d°c", 1234);

  LCD_string(1, 3, str);
}
