float tempr = 0;
uint8_t str[12];
//-----------------------------------------------------------------------------------
void setup()
{
  ht16k33_init(15);   // Initialize HT16K33 with brightness level 15 
  tc77_init(4);       // CS Pin = 4
}
//-----------------------------------------------------------------------------------
void loop() 
{
  tempr = tc77_getTemp();
  
  dtostrf(tempr, 7, 3, str);   // 7 chars min total width, 3 after decimal point
  strcat(str, "Â°C");        
  
  ht16k33_displayText(str);  
  delay(300);                 
}
