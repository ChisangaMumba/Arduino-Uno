#include "assets/ds3232/ds3232.c"
#include "assets/ht16k33/ht16k33.c"
//-----------------------------------------------------------------------------------
void setup()
{
  ht16k33_init();
  ds3232_init();
}
//-----------------------------------------------------------------------------------
uint8_t str[20];
uint8_t time[8];
//-----------------------------------------------------------------------------------
void loop() 
{
  ds3232_getDateTime(time);
  sprintf(str, "TM%02d.%02d.%02d", time[2], time[1], time[0]);  
  
  ht16k33_displayText(str);
  delay(500);
}
